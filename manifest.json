{
  "name": "Voyager",
  "description": "Begin an educational journey that sparks curiosity, wonder, and passion!",
  "version": "0.2",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "icons": {
    "16": "img/logo_16x16.png",
    "48": "img/logo_48x44.png",
    "128": "img/icon_128.png"
  },
  "sandbox": {
    "pages": ["templates.html"]
  },
  "permissions": [
    "storage",
    "webview",
    "fullscreen",
    "<all_urls>"
  ]
}
